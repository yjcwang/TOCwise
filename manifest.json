{
  "manifest_version": 3,
  "name": "TOCwise",
  "version": "1.0.0",
  "description": "TOC for Chatbots and articles powered by Gemini Nano",
  "permissions": ["sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/segment.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ai/llm.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "TOCwise"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
